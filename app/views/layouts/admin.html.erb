<html lang="en">
	<head>
		<meta http-equiv="Contetnt-Type" content="text/html; charset=utf-8">
		<title>Simple CMS | <%= @page_title || 'Admin Area'%></title>
		<meta name="author" content="Prem regmi">
		
		<%= stylesheet_link_tag('public','admin',:media =>'all')%>
		<%=javascript_include_tag('application')%>
		</head>
		<body>
			<div id="header">
				<h1>Simple CMS Admin
					<%= link_to("Public", {:controller => 'public', :action => 'index'}, :class =>'back-link')%></h1></h1>
				</div>
				<div id="main">
					<div id="navigation">
						<%= render(:partial => 'layouts/hehe')%>
						</div>
					<% if !flash[:notice].blank? %>
					<div class="notice">
						<%= flash[:notice] %>
						</div>
						<% end %>
						<div id="content">
							<%= yield%>
							</div>
							</div>
							<div id="footer">
								<p id="copyright">&copy; www.braindigit.com</p>
								</div>
								</body>
								</html>
